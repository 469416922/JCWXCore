@page
@model LoginModel
@{
    ViewData["Title"] = "Get Access Token";
    Layout = "_LayoutIndex";
}
@section css{
    <link href="~/media/css/login.css" rel="stylesheet" type="text/css" />
}
<div class="login" style="background-image:url(../images/banner5.jpg);background-position-x:400px;">
    <div class="content" style="margin-top:50px;" >

        <!-- BEGIN LOGIN FORM -->

        <form class="form-vertical login-form" method="post">

            <h3 class="form-title">获取您的Access Token</h3>

            <div class="alert alert-error @(!Model.IsSuccess ? "" : "hide")">

                <button class="close" data-dismiss="alert"></button>

                <span>@Model.ErrorMessage</span>

            </div>

            <div class="control-group">

                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->

                <label class="control-label visible-ie8 visible-ie9">App ID</label>

                <div class="controls">

                    <div class="input-icon left">

                        <i class="icon-user"></i>

                        <input class="m-wrap placeholder-no-fix" type="text" placeholder="AppID" name="appid" />

                    </div>

                </div>

            </div>

            <div class="control-group">

                <label class="control-label visible-ie8 visible-ie9">AppSecret</label>

                <div class="controls">

                    <div class="input-icon left">

                        <i class="icon-lock"></i>

                        <input class="m-wrap placeholder-no-fix" type="password" placeholder="AppSecret" name="appsecret" />

                    </div>

                </div>

            </div>

            <div class="form-actions">


                <button type="submit" class="btn green pull-right">

                    Get Token <i class="m-icon-swapright m-icon-white"></i>

                </button>

            </div>

            <div class="forget-password">

                <h4>如何获取App ID 和 App Secret ?</h4>

                <p>
                    点击进入【<a href="http://mp.weixin.qq.com/" target="_blank">微信公众平台</a>】-- 开发 - 基本配置
                </p>

            </div>

            <div class="create-account">

                <p>

                    不放心 ?&nbsp;

                    您的AppSecret用来获取Access Token，我们并不会存入数据库

                </p>

            </div>

        </form>

        
    </div>
   
</div>
@section Scripts{ 
<script src="~/media/js/login.js" type="text/javascript"></script>

<!-- END PAGE LEVEL SCRIPTS -->

<script>

		jQuery(document).ready(function() {


		  Login.init();

		});

</script>
}